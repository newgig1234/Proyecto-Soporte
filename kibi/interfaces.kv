<LoginWindow>:
    name: "login"
    legajo: legajo
    contrasena: contrasena 
    GridLayout:
        rows:3
        padding:50,50
        BoxLayout:
            orientation:'horizontal'
            Label:
                text:'SAA'
        GridLayout:
            cols:2
            Label:
                text:'legajo'
            TextInput:
                id: legajo
                multiline:False
                #text:'legajo'
            Label:
                text:'contrsena'
            TextInput:
                id: contrasena
                password: True
        BoxLayout:
            orientation:'horizontal'
            Button:
                text:'Ingresar'
                on_release:
                    root.manager.transition.direction='left'
                    root.login()
            Button:
                text:'Registrarse'
                on_release:
                    root.manager.transition.direction='left'
                    root.registroBtn()

<RegistroWindow>:
    legajoReg: legajoReg
    nombreReg: nombreReg
    apellidoReg: apellidoReg
    emailReg: emailReg
    constrasenaReg: constrasenaReg
    contrasena2Reg: contrasena2Reg
    GridLayout:
        rows:3
        name: "registro"
        padding: 10,10
        spacing: 0
        BoxLayout:
            oriantation:'horizontal'
            Label:
                text: "Registro"    

        GridLayout:
            cols:2

            Label:
                text: "Legajo: "

            TextInput:
                id: legajoReg
                multiline: False

            Label:
                text: "Nombre: "

            TextInput:
                id: nombreReg
                multiline: False

            Label:
                text: "Apellido: "

            TextInput:
                id: apellidoReg
                multiline: False
                        
            Label:
                text: "Email: "

            TextInput:
                id: emailReg
                multiline: False
                                    
            Label:
                text: "Contraseña: "
                
            TextInput:
                id: constrasenaReg
                multiline: False
                password: True
                
            Label:
                text: "Repetir la contraseña: "

            TextInput:
                id: contrasena2Reg
                multiline: False
                password: True

        BoxLayout:
            orientation:'horizontal'

            Button:
                text: "Ya tienes cuenta? volver al login"               
                on_release:
                    root.manager.transition.direction = "right"
                    root.login()
            Button:
                text: "Aceptar"
                on_release:
                    root.manager.transition.direction = "left"
                    root.aceptar()



