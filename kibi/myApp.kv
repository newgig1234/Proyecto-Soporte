<LoginWindow>:
    name: "login"
    legajo: legajo
    password: password
    GridLayout:
        rows:3
        padding:50,50
        BoxLayout:
            orientation:'horizontal'
            Label:
                text:'SAA'
        GridLayout:
            cols:2
            Label:
                text:'legajo'
            TextInput:
                id: legajo
                multiline:False
                #text:'legajo'
            Label:
                text:'contrsena'
            TextInput:
                id: password
                password: True
        BoxLayout:
            orientation:'horizontal'
            Button:
                text:'Ingresar'
                on_release:
                    root.manager.transition.direction='left'
                    root.login(legajo.text,password.text)
            Button:
                text:'Registrarse'
                on_release:
                    root.manager.transition.direction='left'
                    root.registroBtn()

<RegistroWindow>:
    legajoReg: legajoReg
    nombreReg: nombreReg
    apellidoReg: apellidoReg
    emailReg: emailReg
    constrasenaReg: constrasenaReg
    contrasena2Reg: contrasena2Reg
    GridLayout:
        rows:3
        name: "registro"
        padding: 10,10
        spacing: 0
        BoxLayout:
            oriantation:'horizontal'
            Label:
                text: "Registro"    

        GridLayout:
            cols:2

            Label:
                text: "Legajo: "

            TextInput:
                id: legajoReg
                multiline: False

            Label:
                text: "Nombre: "

            TextInput:
                id: nombreReg
                multiline: False

            Label:
                text: "Apellido: "

            TextInput:
                id: apellidoReg
                multiline: False
                        
            Label:
                text: "Email: "

            TextInput:
                id: emailReg
                multiline: False
                                    
            Label:
                text: "Contraseña: "
                
            TextInput:
                id: constrasenaReg
                multiline: False
                password: True
                
            Label:
                text: "Repetir la contraseña: "

            TextInput:
                id: contrasena2Reg
                multiline: False
                password: True

        BoxLayout:
            orientation:'horizontal'

            Button:
                text: "Atras"               
                on_release:
                    root.manager.transition.direction = "right"
                    root.volver_login()
            Button:
                text: "Aceptar"
                on_release:
                    root.manager.transition.direction = "left"
                    root.cargarUsuario(legajoReg.text,nombreReg.text,apellidoReg.text,emailReg.text,contrasenaReg.text,contrasena2Reg.text)

<MenuPrincipal>:
    name:'mp'
    #variables aca
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            oriantation:'horizontal'
            Label:
                text:'Menu Principal'
        BoxLayout:
            orientation:'vertical'
            GridLayout:
                cols:3
                padding:15,15               
                Button:
                    text:'Materias'
                    on_release:
                        root.manager.transition.direction='left'
                        root.materiasBtn()                    
                Button:
                    text:'Agregar Materia'
                    on_release:
                        root.manager.transition.direction='left'
                        root.agregarMateriaBtn()
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text:'Salir'
                padding: 10,5
                on_release:
                    root.manager.transition.direction='right'
                    root.logOut()

